<?xml version="1.0" encoding="utf-8"?>
<extension type="module" version="3.6" client="site" method="upgrade">
	<name>J51_Zendesk</name>
	<author>Joomla51</author>
	<creationDate>April 2020</creationDate>
	<copyright>Copyright (C)2020 Joomla51</copyright>
	<license>GNU General Public License version 2 or later</license>
	<authorEmail>info@joomla51.com</authorEmail>
	<authorUrl>http://www.joomla51.com</authorUrl>
	<version>1.0.0</version>
	<description>Klas Zendesk Module</description>

	<files>
		<filename module="mod_j51icons">mod_j51icons.php</filename>
		<filename module="mod_j51icons">mod_j51icons.xml</filename>
		<filename module="mod_j51icons">helper.php</filename>
		<filename module="mod_j51icons">License.txt</filename>		
		<filename module="mod_j51icons">index.html</filename>
		<folder>tmpl</folder>
	</files>
	<config>	
		<fields name="params">
			
			<fieldset name="advanced">
				<field
					name="layout"
					type="modulelayout"
					label="JFIELD_ALT_LAYOUT_LABEL"
					description="JFIELD_ALT_MODULE_LAYOUT_DESC" />

				<field
					name="moduleclass_sfx"
					type="text"
					label="COM_MODULES_FIELD_MODULECLASS_SFX_LABEL"
					description="COM_MODULES_FIELD_MODULECLASS_SFX_DESC" />

				<field
					name="cache"
					type="list"
					default="1"
					label="COM_MODULES_FIELD_CACHING_LABEL"
					description="COM_MODULES_FIELD_CACHING_DESC">
					<option
						value="1">JGLOBAL_USE_GLOBAL</option>
					<option
						value="0">COM_MODULES_FIELD_VALUE_NOCACHING</option>
				</field>

				<field
					name="cache_time"
					type="text"
					default="900"
					label="COM_MODULES_FIELD_CACHE_TIME_LABEL"
					description="COM_MODULES_FIELD_CACHE_TIME_DESC" />
				<field
					name="cachemode"
					type="hidden"
					default="static">
					<option
						value="static"></option>
				</field>
			</fieldset>
		</fields>
	</config>
</extension>